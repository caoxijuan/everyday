<view class="container">
  <!-- 搜索 -->
  <Search class="cate-search"></Search>
  <!-- 分类列表 -->
  <view class="cate-list">
    <scroll-view class="cate-left" scroll-y="true">
      <view class="cate-item" wx:for="{{cateList}}" wx:key="cat_id">
        {{item.cat_name}}
      </view>
    </scroll-view>
    <scroll-view class="cate-right" scroll-y="true">
      <view class="cate-right-item" wx:for="{{cateListRight}}" wx:key="cat_id">
        {{item.cat_name}}
      </view>
    </scroll-view>
  </view>
</view>